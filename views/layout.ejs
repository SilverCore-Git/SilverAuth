<!DOCTYPE html>
<html lang="fr">
<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- AdminLTE + bootstrap + tailwindcss -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/css/adminlte.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>


    <title>SilverAuth Panel</title>

</head>
<body class="hold-transition sidebar-mini">
<div class="wrapper">

    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <a class="navbar-brand" href="/"  role="button">
            <span class="brand-text font-weight-light underline">Retour au site</span>
        </a>
    </nav>

    <!-- Sidebar -->
    <aside style="height: 100vh;" class="main-sidebar sidebar-dark-primary elevation-4">
        <a href="/panel" class="brand-link">
            <span class="brand-text font-weight-light">SilverPanel</span>
        </a>
        <div class="sidebar">
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">

                    <li class="nav-item">
                        <a href="/panel" class="nav-link">
                            <i class="nav-icon fa fa-home" aria-hidden="true"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="/panel/apikey" class="nav-link">
                            <i class="nav-icon fa fa-key"></i>
                            <p>Mes clé d'api</p>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a href="/panel/settings" class="nav-link">
                            <i class="nav-icon fa fa-cogs"></i>
                            <p>Paramètres</p>
                        </a>
                    </li>

                </ul>
            </nav>
        </div>
    </aside>

    <!-- Content Wrapper -->
    <div class="content-wrapper">
        <div class="container-fluid">
            <!-- Ici, le contenu de chaque page sera rendu -->
            <%- body %> <!-- Cette ligne est l'endroit où le contenu de chaque page sera injecté -->
        </div>
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2.0/dist/js/adminlte.min.js"></script>
</body>
</html>
